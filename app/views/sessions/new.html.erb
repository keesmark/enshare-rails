<div class='container'>
  <div class="row">
    <div class="col-md-12">
      <%= form_for(:session, url: signin_path) do |f| %>
        <div class='form-sign'>
          <div class='text-center'>
            <span style="font-size: 48px; color: Dodgerblue;">
              <i class="fas fa-fingerprint"></i>
            </span>
            <h2 class='font-weight-normal'>
              ログイン
            </h2>
          </div>
          <div class='form-label-group'>
            <%= f.label :email, 'メールアドレス' %>
            <%= f.text_field :email, class: 'form-control', placeholder: 'example@abc.com', type: 'email' %>
          </div>
          <div class='form-label-group'>
            <%= f.label :password, 'パスワード' %>
            <%= f.text_field :password, class: 'form-control', placeholder: ' パスワード', type: 'password' %>
          </div>
        </div>
      <%= f.submit 'ログイン', class: 'btn btn-primary btn-block' %>
      <% end %>
      <p>まだ登録してない? <%= link_to 'Sign Up!', signup_path %></p>
    </div>
  </div>
</div>
