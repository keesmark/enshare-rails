<div class="container user_index">
  <h2 class="text-center user_index_title">ユーザー一覧</h2>
  <% if users.any? %>
    <ul class="list-group">
      <% users.each do |user| %>
        <li class="list-group-item">
          <%= user.name %>
          <p><%= link_to 'プロフィールをみる', user_path(user) %></p>
        </li>
      <% end %>
    </ul>
    <%= paginate users %>
  <% end %>
</div>