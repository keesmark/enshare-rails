      <%= link_to 'ギア登録', new_gear_path, class: 'btn btn-primary'%>
    <% else %>
      <a href="#"><button type="button" class="btn btn-primary">簡単ログイン</button></a>
    <% end %>
    </p>
  </div>
</div>
<div class='container'>
  <div class='row'>
    <div class='col12'>
      <%= render 'gears/gears', gears: @gears %>
    </div>
  </div>
</div>
